<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.harshit.infofolk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/news_app_icon1"
        android:label="Info Folk"
        android:roundIcon="@mipmap/news_app_icon1"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme">
        <activity
            android:name="me.harshit.infofolk.MainActivity"
            android:theme="@style/ThemeNoActionBar" />
        <activity
            android:name="me.harshit.infofolk.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Info Folk"
            android:theme="@style/ThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.harshit.infofolk.NewsSourceSelection"
            android:label="Select News Sources" />
        <activity
            android:name="me.harshit.infofolk.DisplayNews"
            android:label="For You" />
        <activity
            android:name="me.harshit.infofolk.About"
            android:label="About" />
        <activity android:name="me.harshit.infofolk.ReadLater"
            android:label="Read Later"/>
    </application>

</manifest>